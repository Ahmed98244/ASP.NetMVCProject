@model Games.Models.Game

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Game Details </h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.GameTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GameTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.GameContent)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GameContent)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.GameAppraisal)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GameAppraisal)
                </dd>
            </dl>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-info" }) |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-dark" })
            </p>
        </div>
        <div class="col-md-4">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.GameImage)
                </dt>

                <dd>
                    <img src="~/Uploads/@Html.DisplayFor(model => model.GameImage)" class="img-thumbnail w-75"/>
                </dd>
            </dl>
        </div>
    </div>
    
</div>

