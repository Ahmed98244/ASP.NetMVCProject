@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>BuyTheGame</h4>
        <div>
            @if(ViewBag.Result != null)
            {
            <h5 class="alert alert-info">@ViewBag.Result</h5>
            }
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-5">
                <input type="submit" value="Create" class="btn btn-outline-info" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-dark" })
            </div>
        </div>
    </div>
}