@model IEnumerable<Games.Models.BuyTheGame>

@{
    ViewBag.Title = "GetGameByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-5">All Games That You Comment On</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.game.GameTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messsage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.game.GameTitle)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Messsage)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "DetailsOfGame", new { id = item.Id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }
</table>